{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@sharedComponents/*": ["./shared/components/*"],
      "@sharedHooks/*": ["./shared/hooks/*"],
      "@sharedUtils/*": ["./shared/utils/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
